{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "width": 1100,
    "margin-top": 10,
    "height": 35,
    "spacing": 5,
    "modules-left": [
        "custom/blank",
	"niri/workspaces",
        "niri/window"
    ],
    "modules-center": [
        "custom/music"
    ],
    "modules-right": [
        "pulseaudio",
        "custom/brightness",
        "network",
        "cpu",
        "memory",
        "clock",
        "custom/blank"
    ],
    "niri/window": {
        "format": "  {}",
        "max-length": 50
    },
    "niri/workspaces": {
        "on-click": "activate"
    },
    "cpu": {
        "format": "  {usage}%",
        "interval": 2
    },
    "memory": {
        "format": "  {}%",
        "interval": 5
    },
    "network": {
        "format-wifi": "  {essid}",
        "format-ethernet": "󰈀  {ipaddr}",
        "format-disconnected": "  Offline",
        "tooltip": false
    },
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-icons": ["", "", ""],
        "on-click": "pavucontrol"
    },
    "clock": {
        "format": "  {:%H:%M}",
        "tooltip": "  {:%d/%m/%Y}"
    },
    "custom/music": {  
        "exec": "playerctl -p audacious metadata --format '  {{artist}} - {{title}}'",  
        "interval": 1,  
        "on-click": "playerctl -p audacious play-pause",  
        "on-scroll-up": "playerctl -p audacious next",  
        "on-scroll-down": "playerctl -p audacious previous",  
        "max-length": 50,  
        "format-icons": {  
            "Playing": "",  
            "Paused": ""  
        },  
        "on-click-middle": "audacious"
    }, 
    "custom/brightness": {
        "exec": "brightnessctl -m | awk -F, '{print substr($4, 0, length($4)-1)}'",
        "format": "󰃠 {}",
        "on-scroll-up": "brightnessctl s +1%",
        "on-scroll-down": "brightnessctl s 1%-",
	"interval": 1
    },
    "custom/blank": {
        "format": " "
    }
}
